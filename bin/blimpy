#!/usr/bin/env ruby

require 'rubygems'
require 'yaml'
# Need to force the psych engine since syck doesn't seem to serialize the
# OpenStack Floating IPs
YAML::ENGINE.yamler = 'psych'

begin
  require 'blimpy/cli'
rescue LoadError
  $:.unshift File.expand_path(File.dirname(__FILE__) + '/../lib/')
  require 'blimpy/cli'
end

Blimpy::CLI.start
exit 0
